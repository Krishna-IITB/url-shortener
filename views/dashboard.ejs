<!DOCTYPE html>
<html>
<head>
  <title>URL Shortener Analytics</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: Arial, sans-serif; max-width: 1200px; margin: 0 auto; padding: 20px; }
    .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin: 20px 0; }
    .stat-card { background: #f8f9fa; padding: 20px; border-radius: 8px; text-align: center; }
    .stat-number { font-size: 2.5em; font-weight: bold; color: #2563eb; }
    table { width: 100%; border-collapse: collapse; margin: 20px 0; }
    th, td { padding: 12px; text-align: left; border-bottom: 1px solid #eee; }
    th { background: #f8f9fa; font-weight: 600; }
    .short-url { font-family: monospace; }
  </style>
</head>
<body>
  <h1>ðŸš€ URL Shortener Analytics</h1>
  
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-number"><%= totalStats.totalUrls %></div>
      <div>Total URLs</div>
    </div>
    <div class="stat-card">
      <div class="stat-number"><%= totalStats.totalClicks %></div>
      <div>Total Clicks</div>
    </div>
    <div class="stat-card">
      <div class="stat-number"><%= Math.round(totalStats.uptime / 60) %>m</div>
      <div>Uptime</div>
    </div>
  </div>

  <h2>ðŸ“Š Top 10 URLs (Last 30 Days)</h2>
  <table>
    <thead>
      <tr>
        <th>Short Code</th>
        <th>Original URL</th>
        <th>Clicks</th>
        <th>Status</th>
        <th>Short URL</th>
      </tr>
    </thead>
    <tbody>
      <% topUrls.forEach(url => { %>
        <tr>
          <td><strong><%= url.short_code %></strong></td>
          <td><%= url.original_url.slice(0, 40) %><%= url.original_url.length > 40 ? '...' : '' %></td>
          <td><strong><%= url.clicks %></strong></td>
          <td>
            <span style="color: <%= url.status === 'active' ? '#10b981' : '#ef4444' %>;">
              <%= url.status %>
            </span>
          </td>
          <td><a href="<%= baseUrl %>/<%= url.short_code %>" class="short-url" target="_blank"><%= baseUrl %>/<%= url.short_code %></a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    // Add some interactivity
    document.querySelectorAll('tr').forEach(row => {
      row.addEventListener('click', () => {
        const shortUrl = row.cells[4].querySelector('a');
        if (shortUrl) navigator.clipboard.writeText(shortUrl.href);
      });
    });
  </script>
</body>
</html>
